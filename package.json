{
  "name": "starter-server",
  "version": "1.0.0",
  "description": "Starter Hono server",
  "author": {
    "name": "Timur Badretdinov",
    "url": "https://github.com/Destiner"
  },
  "keywords": [
    "hono",
    "backend",
    "starter"
  ],
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git://github.com/Destiner/starter-server.git"
  },
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --hot src/index.ts",
    "lint": "bun run lint:prettier && bun run lint:eslint",
    "lint:prettier": "prettier -c \"src/**/*.{json,js,ts}\"",
    "lint:eslint": "eslint \"src/**/*.{js,ts}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.6.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/bun": "latest",
    "eslint": "^9.19.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import-x": "^4.6.1",
    "prettier": "^3.4.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.22.0"
  }
}
